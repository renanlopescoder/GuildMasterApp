<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transparent_logo">


    <Button
            android:id="@+id/event_sort_close_button"
            android:contentDescription="@string/profile_dialog_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_close_white_24dp"
            android:layout_gravity="end"/>


    <Button
            android:id="@+id/event_sort_name"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/events_name_sort"
            android:layout_gravity="center"
            style="@style/AppTheme.Button.Red"
            android:layout_marginBottom="8dp"/>

    <Button
            android:id="@+id/event_sort_level"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/events_level_sort"
            android:layout_gravity="center"
            style="@style/AppTheme.Button.Gray"
            android:layout_marginBottom="8dp"/>

    <Button
            android:id="@+id/event_sort_map"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/events_map_sort"
            android:layout_gravity="center"
            style="@style/AppTheme.Button.Red"
            android:layout_marginBottom="8dp"/>


    <Button
            android:id="@+id/event_sort_ascending"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/events_ascending_sort"
            android:layout_gravity="center"
            style="@style/AppTheme.Button.Gray"
            android:layout_marginBottom="8dp"
            android:visibility="invisible"/>


    <Button
            android:id="@+id/event_sort_descending"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/events_descending_sort"
            android:layout_gravity="center"
            style="@style/AppTheme.Button.Red"
            android:layout_marginBottom="8dp"
            android:visibility="invisible"/>



</LinearLayout>