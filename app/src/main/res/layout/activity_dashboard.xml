<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- background image below -->
    <ImageView
            android:id="@+id/dashboard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/dashboard_background"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/dashboard_background_description"
            app:layout_constraintHorizontal_bias="1.0"/>
    <!-- "Dashboard" at the top of the screen -->
    <TextView
            android:id="@+id/dashboard_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="44dp"
            android:text="@string/dashboard_navigation_label"
            android:textSize="18sp"
            android:textColor="@color/dark_gray"
            android:textStyle="bold"
            android:gravity="start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <!-- "Hello, Wizard! and Profile Pic -->
    <androidx.cardview.widget.CardView
            android:id="@+id/dashboard_greeting_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/white"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/dashboard_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white_clear">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
            <TextView
                    android:id="@+id/dashboard_greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="30dp"
                    android:text="@string/hello_nwizard"
                    android:textSize="36sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dashboard_prof_pic" tools:ignore="RtlSymmetry"/>
            <ImageView
                    android:id="@+id/dashboard_prof_pic"
                    android:contentDescription="@string/temporary_profile_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/dashboard_greeting"
                    android:src="@drawable/temp_profile_pic"
                    tools:ignore="RtlSymmetry"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <!-- OVERVIEW/PVP Toggle Card -->
    <androidx.cardview.widget.CardView
            android:id="@+id/dashboard_toggle_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardElevation="4dp"
            android:background="@drawable/button_rounded"
            app:layout_constraintTop_toBottomOf="@id/dashboard_greeting_card"
            app:layout_constraintStart_toStartOf="@id/dashboard_greeting_card"
            app:layout_constraintEnd_toEndOf="@id/dashboard_greeting_card"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#CCFFFFFF">
        <ToggleButton
                android:id="@+id/dashboard_overview_toggle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_toggle"
                android:textOn="@string/toggle_button_overview_label"
                android:textOff="@string/toggle_button_overview_label"
                android:textSize="12sp"
                android:textColor="@color/color_toggle"
                android:backgroundTint="@color/dark_gray"
                android:checked="true"/>
        <ToggleButton
                android:id="@+id/dashboard_pvp_toggle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:background="@drawable/button_toggle"
                android:textOn="@string/pvp_button_label"
                android:textOff="@string/pvp_button_label"
                android:textSize="12sp"
                android:textColor="@color/color_toggle"
                android:backgroundTint="@color/dark_gray"
                android:checked="false"/>
        <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/filter_icon"
                android:scaleType="fitXY"
                android:layout_gravity="end"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="@string/filter_icon_description"/>
    </androidx.cardview.widget.CardView>
    <!-- Crafting Card -->
    <androidx.cardview.widget.CardView
            android:id="@+id/crafting_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dashboard_toggle_card"
            app:layout_constraintStart_toStartOf="@id/dashboard_toggle_card"
            app:layout_constraintEnd_toEndOf="@id/dashboard_toggle_card"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#CCB13B3B">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="24dp"
                        android:paddingStart="24dp"
                        android:text="@string/dashboard_temp_crafting"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        tools:ignore="RtlSymmetry"/>
                <ImageButton
                        android:id="@+id/crafting_close_button"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_round"
                        android:src="@drawable/ic_close_white_24dp"
                        android:contentDescription="@string/close_btn_description"/>
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:paddingBottom="24dp"
                    android:text="@string/dashboard_temp_craft_requirements"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    tools:ignore="RtlSymmetry"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ProgressBar
                        android:id="@+id/crafting_progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:paddingBottom="24dp"
                        android:paddingTop="25dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/dashboard_progressbar_layer"
                        android:progress="60"
                        android:indeterminate="false"
                        android:layout_weight="3"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/crafting_percent"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@+id/crafting_card"
            app:layout_constraintEnd_toEndOf="@id/crafting_card"
            app:layout_constraintStart_toStartOf="@+id/crafting_card">
        <androidx.cardview.widget.CardView
                android:id="@+id/crafting_quests_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/white_clear"
                android:elevation="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="25dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"

                        android:src="@drawable/crafting_quest_icon"
                        android:contentDescription="@string/crafting_icon_description"
                        android:padding="7dp"/>
                <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.7"
                        android:text="@string/crafting_quests"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:text="@string/crafting_quests_count"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_gray"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:id="@+id/overall_quests_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/white_clear"
                android:elevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/crafting_quests_card"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="25dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:src="@drawable/overall_quest_icon"
                        android:contentDescription="@string/quest_icon"
                        android:padding="7dp"/>

                <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.7"
                        android:text="@string/overall_quests"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:text="@string/overall_quests_count"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_gray"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:id="@+id/learning_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/white_clear"
                android:elevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/overall_quests_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardCornerRadius="25dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/learning_icon"
                        android:layout_weight="0.2"
                        android:contentDescription="@string/learning_icon_description"
                        android:padding="7dp"/>
                <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/learning"
                        android:layout_gravity="center"
                        android:layout_weight="2.7"
                        android:textSize="16sp"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center"
                        android:text="@string/learning_count"
                        android:layout_weight="0.3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_gray"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>