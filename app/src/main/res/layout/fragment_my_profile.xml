<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.profile.ProfileFragment">

    <!-- Background image -->
    <ImageView
            android:contentDescription="@string/profile_background_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/profile_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitXY"/>


    <!-- Screen Title -->
    <androidx.cardview.widget.CardView
            android:id="@+id/profile_title_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#4CF3FFFF">

        <TextView
                android:id="@+id/profile_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/title_my_profile"
                android:paddingHorizontal="40dp"/>

    </androidx.cardview.widget.CardView>



    <!-- Main CardView -->
    <androidx.cardview.widget.CardView
            android:id="@+id/profile_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_title_card_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp"
            android:layout_marginBottom="50dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#4CF3FFFF"
            android:layout_marginStart="16dp">



        <!-- Root layer of Main CardView (Horizontal) -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <!-- Armor column -->
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="start"
                    android:paddingHorizontal="5dp">

                <!-- Armor title -->
                <TextView
                        android:id="@+id/profile_armor_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="@string/profile_armor_title"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                <!-- Armor icons -->
                <ImageView
                        android:id="@+id/profile_equipment_helm"
                        android:contentDescription="@string/helm_slot"
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/equipment_helm_icon"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:clickable="true"
                        android:focusable="true"/>

                <ImageView
                        android:id="@+id/profile_equipment_shoulders"
                        android:contentDescription="@string/shoulder_slot"
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/equipment_shoulder_icon"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:clickable="true"
                        android:focusable="true"/>
                <ImageView
                        android:id="@+id/profile_equipment_coat"
                        android:contentDescription="@string/chest_slot"
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/equipment_chest_icon"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:clickable="true"
                        android:focusable="true"/>
                <ImageView
                        android:id="@+id/profile_equipment_gloves"
                        android:contentDescription="@string/hands_slot"
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/equipment_hand_icon"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:clickable="true"
                        android:focusable="true"/>
                <ImageView
                        android:id="@+id/profile_equipment_leggings"
                        android:contentDescription="@string/legs_slot"
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/equipment_leg_icon"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:clickable="true"
                        android:focusable="true"/>
                <ImageView
                        android:id="@+id/profile_equipment_boots"
                        android:contentDescription="@string/feet_slot"
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/equipment_feet_icon"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:clickable="true"
                        android:focusable="true"/>

            </LinearLayout>


            <!-- Weapon Column -->
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="start"
                    android:paddingHorizontal="5dp">

                <!-- Weapon Title -->
                <TextView
                        android:id="@+id/profile_weapon_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="@string/profile_weapon_title"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                <!-- Weapon Icons -->
                <ImageView
                        android:id="@+id/profile_weapon_a1"
                        android:contentDescription="@string/hands_slot"
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/equipment_hand_icon"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:clickable="true"
                        android:focusable="true"/>

                <ImageView
                        android:id="@+id/profile_weapon_a2"
                        android:contentDescription="@string/hands_slot"
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/equipment_hand_icon"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:clickable="true"
                        android:focusable="true"/>

                <ImageView
                        android:id="@+id/profile_weapon_b1"
                        android:contentDescription="@string/hands_slot"
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/equipment_hand_icon"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:clickable="true"
                        android:focusable="true"/>

                <ImageView
                        android:id="@+id/profile_weapon_b2"
                        android:contentDescription="@string/hands_slot"
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/equipment_hand_icon"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:clickable="true"
                        android:focusable="true"/>

            </LinearLayout>


            <!-- Profile pic & attributes column -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <!-- Profile Pic -->
                <ImageView
                        android:id="@+id/profile_character_image"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:layout_marginTop="25dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/profile_character_image"
                        android:scaleType="fitCenter"
                        android:src="@drawable/character_human_mesmer_male"/>


                <!-- Attributes CardView -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="#4CF3FFFF">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/profile_title_attributes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/profile_attributes"
                                android:textSize="25sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginStart="20dp"/>

                        <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardElevation="12dp"
                                app:cardCornerRadius="5dp"
                                app:cardBackgroundColor="#8CF3DDCC">

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">


                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                    <TextView
                                            android:id="@+id/profile_attribute_power"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/profile_attribute_power"
                                            android:textSize="20sp"
                                            android:textColor="@color/black"
                                            android:textStyle="italic"
                                            android:textAlignment="textStart"
                                            android:layout_marginStart="12dp"/>

                                    <TextView
                                            android:id="@+id/profile_attribute_power_stat"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/profile_attribute_default_stat"
                                            android:textSize="20sp"
                                            android:textColor="@color/black"
                                            android:textAlignment="textEnd"
                                            android:paddingEnd="12dp"/>

                                </LinearLayout>


                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                    <TextView
                                            android:id="@+id/profile_attribute_precision"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/profile_attribute_precision"
                                            android:textSize="20sp"
                                            android:textColor="@color/black"
                                            android:textStyle="italic"
                                            android:textAlignment="textStart"
                                            android:layout_marginStart="12dp"/>

                                    <TextView
                                            android:id="@+id/profile_attribute_precision_stat"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/profile_attribute_default_stat"
                                            android:textSize="20sp"
                                            android:textColor="@color/black"
                                            android:textAlignment="textEnd"
                                            android:paddingEnd="12dp"/>

                                </LinearLayout>


                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                    <TextView
                                            android:id="@+id/profile_attribute_toughness"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/profile_attribute_toughness"
                                            android:textSize="20sp"
                                            android:textColor="@color/black"
                                            android:textStyle="italic"
                                            android:textAlignment="textStart"
                                            android:layout_marginStart="12dp"/>

                                    <TextView
                                            android:id="@+id/profile_attribute_toughness_stat"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/profile_attribute_default_stat"
                                            android:textSize="20sp"
                                            android:textColor="@color/black"
                                            android:textAlignment="textEnd"
                                            android:paddingEnd="12dp"/>

                                </LinearLayout>


                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                    <TextView
                                            android:id="@+id/profile_attribute_vitality"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/profile_attribute_vitality"
                                            android:textSize="20sp"
                                            android:textColor="@color/black"
                                            android:textStyle="italic"
                                            android:textAlignment="textStart"
                                            android:layout_marginStart="12dp"/>

                                    <TextView
                                            android:id="@+id/profile_attribute_vitality_stat"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="@string/profile_attribute_default_stat"
                                            android:textSize="20sp"
                                            android:textColor="@color/black"
                                            android:textAlignment="textEnd"
                                            android:paddingEnd="12dp"/>

                                </LinearLayout>


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                            <TextView
                                    android:id="@+id/profile_name_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/profile_name_title"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:textStyle="italic"
                                    android:textAlignment="textStart"
                                    android:layout_marginStart="12dp"/>

                            <TextView
                                    android:id="@+id/profile_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Name"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:textAlignment="textEnd"
                                    android:paddingEnd="12dp"/>

                        </LinearLayout>



                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                            <TextView
                                    android:id="@+id/profile_race_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/profile_race_title"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:textStyle="italic"
                                    android:textAlignment="textStart"
                                    android:layout_marginStart="12dp"/>

                            <TextView
                                    android:id="@+id/profile_race"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Race"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:textAlignment="textEnd"
                                    android:paddingEnd="12dp"/>

                        </LinearLayout>



                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                            <TextView
                                    android:id="@+id/profile_level_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/profile_level_title"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:textStyle="italic"
                                    android:textAlignment="textStart"
                                    android:layout_marginStart="12dp"/>

                            <TextView
                                    android:id="@+id/profile_level"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Level"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:textAlignment="textEnd"
                                    android:paddingEnd="12dp"/>

                        </LinearLayout>



                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                            <TextView
                                    android:id="@+id/profile_profession_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/profile_profession_title"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:textStyle="italic"
                                    android:textAlignment="textStart"
                                    android:layout_marginStart="12dp"/>

                            <TextView
                                    android:id="@+id/profile_profession"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Thief"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:textAlignment="textEnd"
                                    android:paddingEnd="12dp"/>

                        </LinearLayout>

                    </LinearLayout>



                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>