<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:adjustViewBounds="true"
        android:background="@drawable/banner_menu_2"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="5dp"
        tools:ignore="ExtraText,RtlSymmetry">

    <TextView
            android:id="@+id/nav_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_username"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="times"
            android:paddingTop="3dp"

            app:layout_constraintBottom_toTopOf="@id/nav_header_race_title"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <TextView
                android:id="@+id/nav_header_race_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Race: "
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="times"
                app:layout_constraintTop_toBottomOf="@id/nav_header_name"
                app:layout_constraintBottom_toBottomOf="parent"/>


        <TextView
                android:id="@+id/nav_header_race"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_email"
                android:textColor="@android:color/holo_red_dark"
                android:fontFamily="times"
                app:layout_constraintTop_toBottomOf="@id/nav_header_name"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </LinearLayout>


</LinearLayout>