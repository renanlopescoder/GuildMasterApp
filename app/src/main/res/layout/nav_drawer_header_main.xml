<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:adjustViewBounds="true"
        android:background="@drawable/banner_menu_2"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="5dp"
        tools:ignore="ExtraText,RtlSymmetry">

    <TextView
            android:id="@+id/nav_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_username"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="times"
            android:paddingTop="3dp"

            app:layout_constraintBottom_toTopOf="@id/nav_header_email"

    />

    <TextView
            android:id="@+id/nav_header_email"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="@string/sample_email"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            app:layout_constraintTop_toBottomOf="@id/nav_header_name"
            app:layout_constraintBottom_toBottomOf="parent"
    />
</LinearLayout>