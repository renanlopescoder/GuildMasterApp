<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/dark_red"
        android:orientation="vertical"
        android:padding="16dp">

    <ImageView
            android:id="@+id/profile_image_view"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_sample_profile_pic"
            android:contentDescription="@string/profile_pic"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/nav_header_name"
            app:shapeAppearanceOverlay="@style/RoundedCornerImage"
    />

    <TextView
            android:id="@+id/nav_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_username"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/profile_image_view"
            app:layout_constraintBottom_toTopOf="@id/nav_header_email"
    />

    <TextView
            android:id="@+id/nav_header_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_email"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/nav_header_name"
            app:layout_constraintBottom_toBottomOf="parent"
    />
</LinearLayout>