<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dashboard.DashboardFragment">
    <!-- background image below -->
    <ImageView
            android:id="@+id/dashboard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/dashboard_background"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/dashboard_background_description"
            app:layout_constraintHorizontal_bias="1.0"/>
    <!-- "Dashboard" at the top of the screen -->
    <TextView
            android:id="@+id/dashboard_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="44dp"
            android:text="@string/dashboard_navigation_label"
            android:textSize="18sp"
            android:textColor="@color/dark_gray"
            android:textStyle="bold"
            android:gravity="start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <!-- "Hello, Wizard! and Profile Pic -->
    <androidx.cardview.widget.CardView
            android:id="@+id/dashboard_greeting_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/white"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/dashboard_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white_clear">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
            <TextView
                    android:id="@+id/dashboard_greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_nwizard"
                    android:textSize="36sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dashboard_temp_prof_pic" tools:ignore="RtlSymmetry"/>
            <ImageView
                    android:id="@+id/dashboard_temp_prof_pic"
                    android:contentDescription="@string/temporary_profile_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/dashboard_greeting"
                    android:src="@drawable/temp_profile_pic"
                    tools:ignore="RtlSymmetry"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <!-- OVERVIEW/PVP Toggle Card -->
    <androidx.cardview.widget.CardView
            android:id="@+id/dashboard_toggle_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardElevation="4dp"
            android:background="@drawable/button_rounded"
            app:layout_constraintTop_toBottomOf="@id/dashboard_greeting_card"
            app:layout_constraintStart_toStartOf="@id/dashboard_greeting_card"
            app:layout_constraintEnd_toEndOf="@id/dashboard_greeting_card"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="#CCFFFFFF">
        <ToggleButton
                android:id="@+id/dashboard_overview_toggle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_toggle"
                android:textOn="@string/toggle_button_overview_label"
                android:textOff="@string/toggle_button_overview_label"
                android:textSize="12sp"
                android:textColor="@color/color_toggle"
                android:backgroundTint="@color/dark_gray"
                android:checked="true"/>
        <ToggleButton
                android:id="@+id/dashboard_pvp_toggle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:background="@drawable/button_toggle"
                android:textOn="@string/pvp_button_label"
                android:textOff="@string/pvp_button_label"
                android:textSize="12sp"
                android:textColor="@color/color_toggle"
                android:backgroundTint="@color/dark_gray"
                android:checked="false"/>
        <ImageButton
                android:id="@+id/filter_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/filter_icon"
                android:scaleType="fitXY"
                android:layout_gravity="end"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="@string/filter_icon_description"/>
    </androidx.cardview.widget.CardView>
    <!-- Crafting Card -->

    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/dashboard_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dashboard_toggle_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="75dp"
            />

    <!--View used to make the background get dark when the filter icon is pressed-->
    <View
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>