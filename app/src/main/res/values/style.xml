<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base button style -->
    <style name="BaseButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:radius">100dp</item>
    </style>

    <!-- Primary button style -->
    <style name="PrimaryButtonStyle" parent="BaseButtonStyle">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Secondary button style -->
    <style name="SecondaryButtonStyle" parent="BaseButtonStyle">
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:background">@drawable/button_rounded_secondary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.GuildMasterApp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@color/dark_gray</item>
    </style>
</resources>
