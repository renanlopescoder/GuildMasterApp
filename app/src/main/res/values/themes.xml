<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.GuildMasterApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_red</item>
        <item name="colorPrimaryVariant">@color/dark_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_red</item>
        <item name="colorSecondaryVariant">@color/dark_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">times</item>
        <item name="android:fontFamily">times</item>

    </style>

    <!-- Override button style -->
    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">100dp</item> <!-- Round corners -->
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:backgroundTintMode">src_in</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Override button style -->
    <style name="GuildFragment.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:backgroundTintMode">src_in</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginStart">25dp</item>
    </style>
</resources>